<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_edit_todo"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mag.todo.EditTodoActivity">

    <CheckBox
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkDone"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="@+id/spinner_priority" />

    <TextView
        android:text="Priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkDone"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp" />

    <Spinner
        android:layout_height="0dp"
        android:id="@+id/spinner_priority"
        android:layout_marginEnd="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        android:layout_marginStart="8dp"
        app:layout_constraintLeft_toRightOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        android:layout_width="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/checkDone"
        android:layout_marginTop="8dp" />

    <TextView
        android:text="Duedate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textAppearance="@android:style/TextAppearance.Medium"
        app:layout_constraintBottom_toBottomOf="@+id/datePicker2"
        app:layout_constraintTop_toTopOf="@+id/datePicker2"
        app:layout_constraintLeft_toLeftOf="@+id/textView3" />

    <DatePicker
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker2"
        android:datePickerMode="spinner"
        android:measureAllChildren="false"
        android:calendarViewShown="false"
        app:layout_constraintTop_toBottomOf="@+id/spinner_priority"
        app:layout_constraintLeft_toLeftOf="@+id/spinner_priority"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/spinner_priority" />

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:id="@+id/inputItem"
        app:layout_constraintTop_toBottomOf="@+id/datePicker2"
        android:layout_width="0dp"
        app:layout_constraintHorizontal_bias="0.56"
        android:layout_marginTop="8dp"
        app:layout_constraintRight_toRightOf="@+id/datePicker2"
        app:layout_constraintLeft_toLeftOf="@+id/textView2">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Todo Item"
            android:id="@+id/edit_item" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_height="wrap_content"
        android:id="@+id/inputDetail"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/inputItem"
        android:layout_width="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/inputItem"
        app:layout_constraintRight_toRightOf="@+id/inputItem">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Todo Detail"
            android:id="@+id/edit_detail" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:text="Save"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        style="@style/Base.TextAppearance.AppCompat.Button"
        app:layout_constraintRight_toRightOf="@+id/inputDetail"
        app:layout_constraintLeft_toLeftOf="@+id/inputDetail"
        app:layout_constraintTop_toBottomOf="@+id/inputDetail"
        android:layout_marginTop="8dp" />

</android.support.constraint.ConstraintLayout>
