<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mag.todo.MainActivity"
    tools:showIn="@layout/activity_main">

    <RadioGroup
        android:layout_width="0dp"
        android:id="@+id/radiogroup_order"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        app:layout_constraintLeft_toLeftOf="parent"
        android:checkedButton="@+id/radio_priority">

        <RadioButton
            android:text="Priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_priority"
            android:layout_weight="1" />

        <RadioButton
            android:text="Due Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_duedate"
            android:layout_weight="1" />
    </RadioGroup>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lvItems2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/radiogroup_order" >

    </android.support.v7.widget.RecyclerView>

    <CheckBox
        android:text="overdue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_overdue"
        app:layout_constraintLeft_toRightOf="@+id/radiogroup_order"
        app:layout_constraintBottom_toBottomOf="@+id/radiogroup_order"
        app:layout_constraintTop_toTopOf="@+id/radiogroup_order"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:checked="true" />

    <CheckBox
        android:text="Done"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/check_done"
        app:layout_constraintLeft_toRightOf="@+id/check_overdue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/check_overdue"
        app:layout_constraintBottom_toBottomOf="@+id/check_overdue"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:checked="false" />

</android.support.constraint.ConstraintLayout>
